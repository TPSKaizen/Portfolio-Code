<%- include('header'); -%>
<body>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
        
    <div class="box">
      
            <% for(let i = 0; i < newItems.length; i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p> <%= newItems[i] %>  </p>
                </div>
                <% } %>



        <form class="item" method="POST" action="/">
            <input type="text" name="item" placeholder="New Item" autocomplete="off">
            <!-- We log the value to determine on the backend which route to redirect to-->
            <button type="submit" name="list" value="<%= listTitle %>"> + </button>
        </form>

    </div>  
   
    <%- include('footer'); -%>